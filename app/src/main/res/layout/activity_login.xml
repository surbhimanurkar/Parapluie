<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/sunny_skirt"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:textSize="@dimen/app_name_fullscreen_text_size"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:gravity="center_vertical" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_with_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop = "@dimen/fb_login_vertical_padding"
        android:paddingBottom = "@dimen/fb_login_vertical_padding"
        android:layout_marginLeft="@dimen/fb_login_horizontal_margin"
        android:layout_marginRight="@dimen/fb_login_horizontal_margin"
        android:layout_marginStart="@dimen/fb_login_horizontal_margin"
        android:layout_marginEnd="@dimen/fb_login_horizontal_margin"
        android:layout_marginTop="@dimen/login_button_vertical_margin"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/abc_text_size_button_material"
        android:textAllCaps="true"
        android:drawableLeft="@drawable/facebook_white_logo"
        android:drawableStart="@drawable/facebook_white_logo"/>

    <TextView
        android:id="@+id/login_privacy_promise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_privacy_promise"
        android:textSize="@dimen/login_privacy_promise_size"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="@dimen/login_button_vertical_bottom_margin"/>

